/* pages/timecard/order/order.wxss */
.img1{
  width: 44rpx;
  height: 44rpx;
  vertical-align:middle;
}

.box1{
  display: flex;
  margin-top:30rpx;
  border-bottom:2rpx dashed #ccc;
  padding-bottom:40rpx;
  margin-left:40rpx;
  margin-right:40rpx;
}
.box1>view:nth-child(1){
  flex: 2;
}
.box1>view:nth-child(2){
  flex: 1;
  text-align:right;
}
.wz1{
  margin-left:20rpx;
  font-size:38rpx;
}

.box2{
  display: flex;
  margin-top:30rpx;
  border-bottom:2rpx dashed #ccc;
  padding-bottom:40rpx;
  margin-left:40rpx;
  margin-right:40rpx;
}

.box3{
  position:fixed;
  bottom:0;
  background:#f8f8f8;
  width:100%;
  height:100rpx;
  display:flex;
  line-height:100rpx;
}
.box3>view:nth-child(1){
  flex: 2;
  padding-left:20rpx;
}
.box3>view:nth-child(2){
  flex: 1;
  text-align:center;
  background:rgb(0,208,210);
  color:#fff;
}










