page
{
  background:#f0f0f0;
}
.verificationContainerInner
{
  margin-left:40rpx;
  margin-right:40rpx;
  height:1200rpx;
  border-radius:15rpx;
  margin-top:30rpx;
  background:#fff;
}
.verifiInnerPart1
{
  margin-left:36rpx;
  height:340rpx;
  padding-top:36rpx;
  margin-right:36rpx;
  }
  .verifiInnerPart1Title
  {
    font-size:34rpx;
    font-weight:bold;
    color:#000;
  }
  .verifiInnerPart1Ctn
  {
    width:100%;
    height:200rpx;
    margin-top:50rpx;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:space-between;
  }
  .verifiInPart1CtnLeft
  {
    flex:0 0 190rpx;
    height:190rpx;
  }
  .verifiInPart1CtnRight
  {
     flex:2;
    height:190rpx;
  }
  .verifiInPart1CtnLeft image{
    width:190rpx;
    height:190rpx;
  }
  .verifiInPart1CtnRight
  {
    display:flex;
    flex-direction: column;
    padding-left:30rpx;
    padding-right:30rpx;
    box-sizing:border-box;
    align-items:flex-start;
    justify-content:space-between;
    font-size:28rpx;
  }
.righhtElement1, .righhtElement3
{
   white-space:nowrap;
   text-overflow:ellipsis;
   overflow:hidden;
}
  .righhtElement1
  {
    font-size:34rpx;
    color:#333;
    height:48rpx;
    line-height:48rpx;
  }
  .righhtElement2
  {
    font-size:24rpx;
    height:66rpx;
    overflow:hidden;
    color:#333;
  }
  .righhtElement3
  {
    font-size:40rpx;
    height:54rpx;
    color:#FE0001;
   font-weight:bold;
  }
